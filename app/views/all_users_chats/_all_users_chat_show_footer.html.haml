.common__footer
  = form_with(model: [@all_users_chat, @comment], html: {class: "footer__form"}, local: true) do |form|
    .footer__form__box
      = form.text_area :content, class: 'footer__form__text', placeholder: "コメントする", rows: "6"
      = form.label :image, class: 'footer__form__label' do
        = icon('far', 'image', class: 'footer__form__icon')
        = form.file_field :image, class: 'Hidden footer__form__file'
    = form.submit "SEND", class: 'footer__form__btn'
