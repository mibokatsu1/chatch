.main__recommend
  %p1
    オススメのチャット
  .recommend
    - @all_users_chats.first(5).each do |all_users_chat|

      .recommend__group
        = link_to all_users_chat_path(all_users_chat), class: "link-black" do
          .recommend__group__img
            - if AllUsersChat.find(1).image.length != 0
              = image_tag AllUsersChat.find(1).image.url, alt: "まだ画像はありません"
              -# = image_tag @all_users_chat.show_last_image.url, alt: "まだ画像はありません"
              -# = image_tag all_users_chat.show_last_image.url, alt: "まだ画像はありません"
          .recommend__group__name
            = "[#{all_users_chat.id}]"
            = all_users_chat.name
          .recommend__group__message
            = all_users_chat.show_last_comment

        .recommend__group__tag
          タグ

  .hidden_boder
  .recommend
    - if @all_users_chats.length >= 10 
      - @all_users_chats.slice(5..9).each do |all_users_chat|

        .recommend__group
          = link_to all_users_chat_path(all_users_chat), class: "link-black" do
            .recommend__group__img
              = all_users_chat.show_last_image
            .recommend__group__name
              = all_users_chat.name
            .recommend__group__message
              = all_users_chat.show_last_comment

          .recommend__group__tag
            タグ